mixin NewBlock({ link = '#', type = 'vertical', title, description, image })
  .NewBlock(class=`${type}`)
    a(href=`${link}`).NewBlock-image
      img(src=`./assets/images/image-new.png`, alt="")

    .NewBlock-info
      a(href=`${link}`).NewBlock-info-title= title 
      if (type === 'vertical')
        p.NewBlock-info-description= description 

      if (type === 'vertical')
        .NewBlock-socials.flex.flex-wrap 
          a(href="#").NewBlock-socials-item
            img(src="./assets/icons/icon-facebook-yellow.svg", alt="") 
          a(href="#").NewBlock-socials-item
            img(src="./assets/icons/icon-twitter-yellow.svg", alt="") 
          a(href="#").NewBlock-socials-item
            img(src="./assets/icons/icon-instagram-yellow.svg", alt="") 
          a(href="#").NewBlock-socials-item
            img(src="./assets/icons/icon-google-yellow.svg", alt="") 

    if (type !== 'vertical')
